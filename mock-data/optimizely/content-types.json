{
  "contentTypes": [
    {
      "id": "ct_article",
      "name": "Article",
      "description": "Standard article content type with rich text support",
      "baseType": "Page",
      "properties": [
        {
          "name": "title",
          "type": "string",
          "displayName": "Title",
          "required": true,
          "maxLength": 200,
          "helpText": "The main title of the article"
        },
        {
          "name": "slug",
          "type": "string",
          "displayName": "URL Slug",
          "required": true,
          "pattern": "^[a-z0-9-]+$",
          "helpText": "URL-friendly version of the title"
        },
        {
          "name": "author",
          "type": "string",
          "displayName": "Author",
          "required": true,
          "helpText": "Article author name"
        },
        {
          "name": "publishDate",
          "type": "datetime",
          "displayName": "Publish Date",
          "required": true,
          "defaultValue": "now",
          "helpText": "When the article should be published"
        },
        {
          "name": "heroImage",
          "type": "contentReference",
          "displayName": "Hero Image",
          "allowedTypes": ["Image"],
          "required": false,
          "helpText": "Main article image"
        },
        {
          "name": "summary",
          "type": "longString",
          "displayName": "Summary",
          "required": true,
          "maxLength": 500,
          "helpText": "Brief summary for listings and SEO"
        },
        {
          "name": "content",
          "type": "xhtmlString",
          "displayName": "Main Content",
          "required": true,
          "helpText": "The main article content with rich text formatting"
        },
        {
          "name": "categories",
          "type": "stringList",
          "displayName": "Categories",
          "required": false,
          "helpText": "Article categories for organization"
        },
        {
          "name": "tags",
          "type": "stringList",
          "displayName": "Tags",
          "required": false,
          "helpText": "Tags for improved searchability"
        },
        {
          "name": "relatedArticles",
          "type": "contentReferenceList",
          "displayName": "Related Articles",
          "allowedTypes": ["Article"],
          "required": false,
          "maxItems": 5,
          "helpText": "Links to related articles"
        },
        {
          "name": "seoMetadata",
          "type": "block",
          "displayName": "SEO Metadata",
          "blockType": "SEOBlock",
          "required": false,
          "helpText": "Search engine optimization settings"
        }
      ],
      "settings": {
        "availability": {
          "languages": ["en", "es", "fr"],
          "channels": ["web", "mobile"]
        },
        "versioning": {
          "enabled": true,
          "maxVersions": 10
        },
        "workflow": {
          "enabled": true,
          "states": ["draft", "review", "published", "archived"]
        }
      }
    },
    {
      "id": "ct_product",
      "name": "Product",
      "description": "E-commerce product with variants and pricing",
      "baseType": "Page",
      "properties": [
        {
          "name": "productName",
          "type": "string",
          "displayName": "Product Name",
          "required": true,
          "maxLength": 150,
          "helpText": "The name of the product"
        },
        {
          "name": "sku",
          "type": "string",
          "displayName": "SKU",
          "required": true,
          "pattern": "^[A-Z0-9-]+$",
          "helpText": "Stock Keeping Unit identifier"
        },
        {
          "name": "price",
          "type": "decimal",
          "displayName": "Price",
          "required": true,
          "min": 0,
          "precision": 2,
          "helpText": "Product price in default currency"
        },
        {
          "name": "description",
          "type": "xhtmlString",
          "displayName": "Description",
          "required": true,
          "helpText": "Detailed product description"
        },
        {
          "name": "images",
          "type": "contentReferenceList",
          "displayName": "Product Images",
          "allowedTypes": ["Image"],
          "required": true,
          "minItems": 1,
          "maxItems": 10,
          "helpText": "Product image gallery"
        },
        {
          "name": "specifications",
          "type": "propertyList",
          "displayName": "Specifications",
          "required": false,
          "helpText": "Technical specifications as key-value pairs"
        },
        {
          "name": "inventory",
          "type": "integer",
          "displayName": "Stock Quantity",
          "required": true,
          "min": 0,
          "defaultValue": 0,
          "helpText": "Current inventory level"
        },
        {
          "name": "variants",
          "type": "blockList",
          "displayName": "Product Variants",
          "blockType": "ProductVariant",
          "required": false,
          "helpText": "Different versions of the product (size, color, etc.)"
        }
      ]
    },
    {
